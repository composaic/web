{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "es2015", "es2017"],
    "declaration": true,
    "declarationDir": "dist/types",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}